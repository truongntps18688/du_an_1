<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">
    <TextView
        android:id="@+id/tieude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chỉnh Sửa"
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="@color/black">
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/MK_KT_chinhsua"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:hint="Nhập mật khẩu"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_KT_chinhsua"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="V"></Button>
    </LinearLayout>
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/ed"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:hint="Hãy nhập mật Khẩu mới"
        android:paddingLeft="20dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/ed1"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:hint="Hãy nhập câu hỏi mới"
        android:paddingLeft="20dp"
        tools:ignore="SpeakableTextPresentCheck" />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/ed2"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:hint="Hãy nhập câu trả lời mới"
        android:paddingLeft="20dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/sua_chinhsua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:text="Sửa" />
        <Button
            android:id="@+id/huy_chinhsua"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:text="hủy" />
    </LinearLayout>

</LinearLayout>