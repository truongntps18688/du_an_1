<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="13dp"
    android:layout_gravity="center"
    android:background="@drawable/custom_dialog_category"
    android:orientation="vertical"
    android:id="@+id/add_category_dialog_fragment">

    <TextView
        android:id="@+id/tieude_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_tieude"
        android:gravity="center"
        android:padding="12dp"
        android:text="GIAO DỊCH"
        android:textColor="@color/white"
        android:textSize="16dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ln1"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tieude_category">
        <TextView
            android:gravity="right|center"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Ngày: "
            android:textSize="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:gravity="center"
            android:textSize="25dp"
            android:hint="dd/mm/yyyy"
            android:background="@drawable/vien_textview"
            android:id="@+id/tvNgay_giaodich"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ln2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ln1">
        <TextView
            android:gravity="right|center"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Giờ: "
            android:textSize="25dp"
            android:textColor="@color/black"/>

        <TextView
            android:gravity="center"
            android:id="@+id/tvGio_giaodich"
            android:layout_width="290dp"
            android:background="@drawable/vien_textview"
            android:layout_height="match_parent"
            android:hint="hh:mm:ss"
            android:textSize="25dp"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ln3"
        android:layout_marginTop="10dp"
        android:layout_below="@id/ln2">
        <TextView
            android:gravity="right|center"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Số tiền: "
            android:textSize="22dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edTien_giaodich"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:inputType="number"
            android:background="@drawable/vien_textview"
            android:maxLength="10"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ln4"
        android:layout_marginTop="15dp"
        android:layout_below="@id/ln3">
        <TextView
            android:gravity="right|top"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:text="Ghi chú: "
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:gravity="top"
            android:id="@+id/edGhiChu_giaodich"
            android:layout_width="290dp"
            android:layout_height="100dp"
            android:maxLines="1"
            android:background="@drawable/vien_textview"
            android:maxLength="10"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ln5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/ln4"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

            <TextView
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Loại: "
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/tvLoai"
                android:gravity="center"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/imgdialog_giaodich"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ry_src_giaodich"
        android:layout_width="380dp"
        android:layout_height="200dp"
        android:layout_below="@id/ln5"
        android:layout_gravity="center"
        android:layout_marginLeft="2dp"

        android:layout_marginTop="10dp"
        android:background="@drawable/bogoc_button_login"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/ln6"
        android:layout_width="match_parent"
        android:layout_height="79dp"
        android:layout_below="@id/ry_src_giaodich"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <Button
            android:id="@+id/btnHuyDialogGD"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/bogoc_button_login"
            android:hint="Huỷ"
            android:textColorHint="#49e3d6"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnLuuDialogGD"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/bogoc_button_login"
            android:hint="Lưu"
            android:textColorHint="#49e3d6"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>
