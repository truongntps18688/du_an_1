<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NGUOI_DUNG.Nguoi_Dung">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/user_nguoi_dung" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
    <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="10dp"
            android:text="Mật khẩu:"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MK_user"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/sua_MK_user"
            android:layout_width="111dp"
            android:layout_height="50dp"
            android:text="Chỉnh sửa"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/MK_user"
            app:layout_constraintStart_toEndOf="@+id/MK_user"
            app:layout_constraintTop_toTopOf="@+id/MK_user"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="108dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="10dp"
            android:text="Câu hỏi:"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/cauhoi_user"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/sua_cauhoi_user"
            android:layout_width="111dp"
            android:layout_height="50dp"
            android:text="Chỉnh sửa"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cauhoi_user"
            app:layout_constraintStart_toEndOf="@+id/cauhoi_user"
            app:layout_constraintTop_toTopOf="@+id/cauhoi_user"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="184dp"
            android:fontFamily="sans-serif-light"
            android:paddingLeft="10dp"
            android:text="Câu trả lời:"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/cautl_user"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/sua_cautl_user"
            android:layout_width="111dp"
            android:layout_height="50dp"
            android:text="Chỉnh sửa"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/cautl_user"
            app:layout_constraintStart_toEndOf="@+id/cautl_user"
            app:layout_constraintTop_toTopOf="@+id/cautl_user"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>