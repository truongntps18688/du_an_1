<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SwipeRevealLayout"
    app:mode="same_level"
    android:layout_marginTop="10dp"
    app:dragEdge="right">
    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/lnDelPhanLoai"
        android:backgroundTint="#B3F44336"
        android:background="@drawable/hieuung"
        android:layout_width="70dp"
        android:layout_height="100dp" >
        <ImageView
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_delete_24"/>
    </LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/ln_rv_giaodich"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:id="@+id/imggd"
        android:layout_width="65dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/anh1" />
    <LinearLayout
        android:layout_gravity="center"
        android:padding="5dp"
        android:orientation="vertical"
        android:layout_weight="10"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvTien"
        android:textSize="22dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="100000000" />

    <TextView

        android:textSize="22dp"
        android:id="@+id/tvNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/20/2002" />
        </LinearLayout>


    <TextView
        android:id="@+id/tvGio"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:layout_weight="1"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="12:30" />

</LinearLayout>
</com.chauthai.swipereveallayout.SwipeRevealLayout>