<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/SwipeRevealLayout"
    app:mode="same_level"
    android:background="@drawable/botron4goc"
    android:layout_marginTop="10dp"
    app:dragEdge="right">
    <!-- Your secondary layout here -->
    <LinearLayout
        android:id="@+id/lnDelPhanLoai"
        android:backgroundTint="#B3F44336"
        android:background="@drawable/hieuung"
        android:layout_width="70dp"
        android:layout_height="100dp" >
        <ImageView
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_baseline_delete_24"/>
    </LinearLayout>
<LinearLayout
    android:orientation="horizontal"
    android:padding="10dp"
    android:id="@+id/ln_rv_giaodich"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/imggd"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/anh1" />

    <LinearLayout
        android:layout_width="208dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_weight="10"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvTien"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="-3dp"
            android:text="100000000"
            android:textSize="22dp" />


    </LinearLayout>


    <TextView

        android:id="@+id/tvNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="12/20/2002"
        android:textColor="@color/dotuoi"
        android:textSize="22dp" />


</LinearLayout>
    <TextView
        android:id="@+id/tvGio"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:layout_weight="1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="12:30" />
</com.chauthai.swipereveallayout.SwipeRevealLayout>